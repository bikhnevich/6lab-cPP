#include "pch.h"
#include <iostream>
#include <ctime>

using namespace std;

int main()
{
	setlocale(LC_ALL, "ru");

	srand(time(NULL));

	const int SIZE = 12;
	int arr[SIZE];
	 
	for (int i = 0; i < SIZE; i++) {
		arr[i] = 163+ rand() % 27;
	}
	for (int i = 0; i < SIZE; i++) {
		cout << arr[i]<< "  " << "Для вывведения следщего роста человека нажмите Enter" << endl;
		system("pause");
	}
}
